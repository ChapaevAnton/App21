<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App21" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Contextual action bar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_24dp</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

    </style>

    <!-- Contextual action bar-->
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/blue</item>
    </style>

    <!-- My theme for app-->
    <style name="My_theme_App" parent="Theme.MaterialComponents.Light">
        <!--        https://www.androhub.com/android-contextual-action-mode-over-toolbar/-->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#4CAF50</item>
        <item name="colorOnPrimary">#FFEB3B</item>
        <item name="android:textViewStyle">@style/My_theme_App.TextSize</item>
    </style>

    <!-- activity style-->
    <style name="My_theme_App.TextSize">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <!-- overlay style button-->
    <style name="My_theme_App.Button" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">#03A9F4</item>
        <item name="android:textSize">40sp</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="My_theme_App.ToggleButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="RoundButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">25dp</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#03A9F4</item>
    </style>

    <style name="TextViewShadow" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/nunito_extralight</item>
        <item name="android:fontFamily">@font/nunito_extralight</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#2196F3</item>
    </style>

    <style name="RoundButtonStyle.TextSize">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="android:topLeftRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="android:bottomLeftRadius">15dp</item>
        <item name="android:bottomRightRadius">15dp</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#03A9F4</item>
    </style>

</resources>