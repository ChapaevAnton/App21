<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App21" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Contextual action bar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_24dp</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <!-- Contextual action bar-->
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/blue</item>
    </style>

    <!-- My theme for app-->
    <style name="My_theme_App" parent="Theme.MaterialComponents.DayNight">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryVariant">#2196F3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:textViewStyle">@style/My_theme_App.TextSize</item>
    </style>

    <!-- activity style-->
    <style name="My_theme_App.TextSize">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- overlay style button-->
    <style name="My_theme_App.Button" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">#03A9F4</item>
        <item name="android:textSize">40sp</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


</resources>